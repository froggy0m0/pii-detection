  margin: 0;
}

ul li {
  font-size: 1.1em;
  padding: 6px 0;  /* 위 아래 간격을 줄여서 컴팩트하게 */
  margin-bottom: 4px;  /* 항목 간 간격을 좀 더 좁게 */
  background-color: #f9f9f9;  /* 배경을 조금 더 연하게 */
  border-radius: 5px;
  border: 1px solid #ddd;  /* 항목의 경계를 살짝 넣어줘서 구분이 잘 되도록 */
}

ul li:last-child {
  margin-bottom: 0; /* 마지막 항목의 하단 간격을 없앰 */
}

